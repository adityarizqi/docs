{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Pusat Bantuan",
  "colors": {
    "primary": "#f67f31",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "appearance": {
    "default": "light",
    "strict": true
  },
  "favicon": "/logoindolatfavnobg.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Panduan Penggunaan",
        "groups": [
          {
            "group": "Panduan",
            "pages": [
              "ujian/welcome",
              "ujian/BuatUjian"
            ]
          },
          {
            "group": "Indolat",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "Paket & Ketentuan",
        "groups": [
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Gabung Komunitas",
          "href": "https://community.indolat.com",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/logoindolatnobg.png",
    "dark": "/logo/logoindolat.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:mahardi@indolat.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "instagram": "https://www.instagram.com/cbt.indolat/",
      "linkedin": "https://www.linkedin.com/company/indolat"
    }
